<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/song_name_text_view"
        android:layout_width="0dp"
        app:layout_constraintVertical_weight="1"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/song_duration_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/song_play_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/song_play_button"
        android:layout_width="@dimen/buttonDimension"
        android:layout_height="@dimen/buttonDimension"
        app:layout_constraintRight_toLeftOf="@id/add_song_to_play_list_button"
        android:background="@mipmap/play_button"/>

    <Button
        android:id="@+id/add_song_to_play_list_button"
        android:layout_width="@dimen/buttonDimension"
        android:layout_height="@dimen/buttonDimension"
        android:background="@mipmap/add_song_to_play_list"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>